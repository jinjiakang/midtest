  <%= form_for(@book) do |f| %>
    <%= f.label :name, "書名" %>
    <%= f.text_field :name %> <br />

    <%= f.label :intro, "簡介" %>
    <%= f.text_area :intro %> <br />

    <%= f.label :author, "作者" %>
    <%= f.text_field :author %> <br />

    <%= f.label :price, "價錢" %>
    <%= f.text_field :price %> <br />

    <%= f.submit %>
  <% end %>